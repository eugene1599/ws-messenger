.my-3.p-3.bg-white.rounded.box-shadow
  .messages-container.h-75
    - if messages.present?
      = render partial: 'messages/partials/message', collection: messages
    - else 
      .media.text-muted.pt-3.no-messages
        %p.media-body.pb-3.mb-0.small.lh-125.border-gray.border-bottom
          = t('chat_rooms.no_messages')
  .message-form
    = render 'messages/partials/form'